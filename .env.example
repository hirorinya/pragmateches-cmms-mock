# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Task Generation Configuration
CRON_SECRET=your_random_cron_secret_key_here
TASK_GENERATION_ENABLED=true
TASK_ASSIGNMENT_AUTO=true
DEFAULT_TASK_PRIORITY=MEDIUM
MAX_TASKS_PER_DAY=50

# Risk Assessment Thresholds
NEXT_PUBLIC_RISK_EXTREME_THRESHOLD=20
NEXT_PUBLIC_RISK_HIGH_THRESHOLD=12
NEXT_PUBLIC_RISK_MEDIUM_THRESHOLD=6
NEXT_PUBLIC_RPN_THRESHOLD=100

# Work Order Configuration
NEXT_PUBLIC_WORK_ORDER_PREFIX=WO

# API Timeouts (milliseconds)
NEXT_PUBLIC_API_TIMEOUT_OPENAI=8000
NEXT_PUBLIC_API_TIMEOUT_DATABASE=5000

# Feature Flags (optional)
NEXT_PUBLIC_ENABLE_MOCK_MODE=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false